<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.promact.calculator.MainActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="TextBox"
        android:ems="10"
        android:id="@+id/main_edittext_reslt"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="37dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="37dp" />

    <Button
        android:text="7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:id="@+id/main_btn_7"
        android:layout_below="@+id/main_edittext_reslt"
        android:layout_alignLeft="@+id/main_edittext_reslt"
        android:layout_alignStart="@+id/main_edittext_reslt" />

    <Button
        android:text="8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_btn_8"
        android:layout_marginTop="22dp"
        android:layout_alignBaseline="@+id/main_btn_9"
        android:layout_alignBottom="@+id/main_btn_9"
        android:layout_toRightOf="@+id/main_btn_7"
        android:layout_toEndOf="@+id/main_btn_7" />

    <Button
        android:text="9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/main_btn_9"
        android:layout_marginTop="22dp"
        android:layout_alignBaseline="@+id/main_btn_7"
        android:layout_alignBottom="@+id/main_btn_7"
        android:layout_toRightOf="@+id/main_btn_8"
        android:layout_toEndOf="@+id/main_btn_8" />

    <Button
        android:text="4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:id="@+id/main_btn_4"
        android:layout_below="@+id/main_edittext_reslt"
        android:layout_alignLeft="@+id/main_edittext_reslt"
        android:layout_alignStart="@+id/main_edittext_reslt" />

    <Button
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/main_btn_8"
        android:layout_toRightOf="@+id/main_btn_4"
        android:layout_toEndOf="@+id/main_btn_4"
        android:id="@+id/main_btn_5" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_btn_5"
        android:layout_toEndOf="@+id/main_btn_8"
        android:id="@+id/button6"
        android:layout_toRightOf="@+id/main_btn_8" />


</RelativeLayout>
